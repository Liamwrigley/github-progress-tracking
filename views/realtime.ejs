            <% data.forEach(event=> { %>
                <li data-timestamp="<%= event.ts %>">
                    <img src="<%= event.discordAvatar %>" alt="<%= event.username %>" class="discord-avatar">
                    <%= event.username %>: Current Streak - <%= event.currentStreak %>
